<h1 class="heading">Books</h1>
  <% @books.each do |book| %>
    <div>
      <%= book.title %>
      <%= book.body %>
      <%= link_to "Show", book_path(book) %>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
    </div>
  <% end %>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>