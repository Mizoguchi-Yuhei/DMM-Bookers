<%= flash[:destroy_success] %>
<h1 class="heading">Books</h1>

<body class="main">
  <table class="item-list">
    <thead class="item-list-heading">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="item">
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <div class="field">
    <%= form_with model: @book, local:true do |f| %>
    <div class="part">
      <label for="book_title" class="form">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="part">
      <label for="book_body" class="form">Body</label>
      <%= f.text_area :body %>
    </div>
      <p class="create_btn"><%= f.submit "Create Book" %></p>
    <% end %>
  </div>
</body>