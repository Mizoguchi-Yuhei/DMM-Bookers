<body class="main">

  <div class="success_flash">
    <%= flash[:destroy_success] %>
  </div>

  <h1 class="heading">Books</h1>

  <table class="item-list">
    <thead class="item-list-heading">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="item">
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="heading">New book</h2>


  <div class="field">
    <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
        <div class="error_msg">
          error!! You couldn't create!
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="part">
        <div class="form">
          <%= f.label :Title %>
        </div>
        <%= f.text_field :title %>
      </div>
      <div class="part">
        <div class="form">
          <%= f.label :Body %>
        </div>
        <%= f.text_area :body %>
        <p class="create_btn"><%= f.submit "Create Book" %></p>
      </div>
    <% end %>
  </div>
</body>