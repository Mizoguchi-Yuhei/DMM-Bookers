<body class="main">
  <h1>Editing Book</h1>

  <div class="field">
    <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
        <div class="error_msg">
          error!! You couldn't update!
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="part">
        <div class="form">
          <%= f.label :Title %>
        </div>
        <%= f.text_field :title %>
      </div>
      <div class="part">
        <div class="form">
          <%= f.label :Body %>
        </div>
        <%= f.text_area :body %>
      </div>
        <p class="update_btn"><%= f.submit "Update Book" %></p>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
    <% end %>
  </div>
</body>
