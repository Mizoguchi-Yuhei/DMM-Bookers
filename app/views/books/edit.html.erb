<body class="main">
  <h1>Editing Book</h1>
  <div class="field">
    <%= form_with model:@book, local:true do |f| %>
      <div class="part">
        <label for="edit_title" class="form">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="part">
        <label for="edit_body" class="form">Body</label>
        <%= f.text_area :body %>
      </div>
        <p class="update_btn"><%= f.submit "Update Book" %></p>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
    <% end %>
  </div>
</body>
